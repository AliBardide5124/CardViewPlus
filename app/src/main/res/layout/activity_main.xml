<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.alibardide5124.cardviewplus.CardViewPlus
        android:id="@+id/mainCardTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toTopOf="@id/mainCardCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:normalCardElevation="2dp"
        app:pressedCardElevation="5dp"
        app:cardPressedColor="#e0e0e0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cardTop_text"
            android:textColor="#de000000"
            android:textSize="15sp" />

    </com.alibardide5124.cardviewplus.CardViewPlus>

    <com.alibardide5124.cardviewplus.CardViewPlus
        android:id="@+id/mainCardCenter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:normalCardElevation="5dp"
        app:pressedCardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cardCenter_text"
            android:padding="5dp"
            android:textColor="#de000000"
            android:textSize="15sp" />

    </com.alibardide5124.cardviewplus.CardViewPlus>

    <com.alibardide5124.cardviewplus.CardViewPlus
        android:id="@+id/mainCardBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:animationEnabled="false"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainCardCenter"
        app:normalCardElevation="2dp"
        app:pressedCardElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cardNoAnimation_text"
            android:padding="5dp"
            android:textColor="#de000000"
            android:textSize="15sp" />

    </com.alibardide5124.cardviewplus.CardViewPlus>


    <com.alibardide5124.cardviewplus.CardViewPlus
        android:id="@+id/mainCardReverse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainCardBottom"
        app:normalCardElevation="10dp"
        app:pressedCardElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cardReverse_text"
            android:textColor="#de000000"
            android:textSize="15sp" />

    </com.alibardide5124.cardviewplus.CardViewPlus>

</androidx.constraintlayout.widget.ConstraintLayout>